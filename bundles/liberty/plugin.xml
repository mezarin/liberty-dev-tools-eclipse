<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.commands">
      <category
            id="liberty.commands.category"
            name="Liberty Dev Category">
      </category>
      <command
            name="Open Dashboard"
            id="liberty.commands.open.dashboard">
      </command>
      <command
            id="liberty.startCmd"
            name="Liberty Start Cmd">
      </command>
      <command
            id="liberty.startParamsCmd"
            name="Liberty Start with Parameters Cmd">
      </command>
      
      <command
            id="liberty.startInContainerCmd"
            name="Liberty Start in Container Cmd">
      </command>      
      <command
            id="liberty.stopCmd"
            name="Liberty Stop Cmd">
      </command>  
      <command
            id="liberty.runTestsCmd"
            name="Liberty Run Tests Cmd">
      </command>  
      <command
            id="liberty.viewIntegrationTestReportCmd"
            name="Liberty View Integration Test Report Cmd">
      </command>   
      <command
            id="liberty.viewUnitTestReportCmd"
            name="Liberty View Unit Test Report Cmd">
      </command>                             
   </extension>

   <extension point="org.eclipse.ui.handlers">
      <handler
            class="liberty.tools.handlers.DashboardHandler"
            commandId="liberty.commands.open.dashboard">
      </handler>
   </extension>
   
   <!-- Bindings -->
   <extension point="org.eclipse.ui.bindings">
      <key commandId="liberty.commands.open.dashboard"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
           sequence="M1+1"/>     
      <key
            commandId="liberty.startCmd"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+L">
      </key>
      <key
            commandId="liberty.startParamsCmd"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+M">
      </key>
      
      <key
            commandId="liberty.startInContainerCmd"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+C">
      </key> 
      <key
            commandId="liberty.stopCmd"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+P">
      </key>    
      <key
            commandId="liberty.runTestsCmd"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+1">
      </key>    
      <key
            commandId="liberty.viewIntegrationTestReportCmd"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+I">
      </key> 
      <key
            commandId="liberty.viewUnitTestReportCmd"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+2">
      </key>
   </extension>
   
   <!-- Menu/Toolbar -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu id="liberty.menus.liberty"
               label="Liberty"
               mnemonic="L">
            <command
                  commandId="liberty.commands.open.dashboard"
                  id="liberty.menus.open.dashboard"
                  mnemonic="D">
            </command>
         </menu>
      </menuContribution>
      <menuContribution locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="liberty.toolbars.dashboard">
            <command
                  id="liberty.toolbars.open.dashboard"
                  commandId="liberty.commands.open.dashboard"
                  icon="icons/openLibertyLogo.png"
                  tooltip="Open Liberty Dashboard View"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
   <!-- Views -->
  <extension point="org.eclipse.ui.views">
     <category 
           id="liberty.views.liberty.category"
           name="Liberty">
     </category>
     <view id="liberty.views.liberty.devmode.dashboard"
           name="Liberty Dashboard"
           icon="icons/openLibertyLogo.png"
           category="liberty.views.liberty.category"
           class="liberty.tools.ui.DashboardView"/>
  </extension>
  
  <!-- Nature -->
  <extension id="libertyNature" name="LibertyNature" point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="liberty.tools.LibertyNature">
         </run>
      </runtime>
  </extension>
  
  <!-- Delegate-->
  <extension point="org.eclipse.tm.terminal.view.ui.launcherDelegates">
      <delegate
          class="liberty.tools.ui.terminal.LocalDevModeLauncherDelegate"
          id="liberty.tools.ui.terminal.local.devmode.launcher.delegate"
          label="liberty.tools.ui.terminal.local.devmode.launcher.delegate.label">
      </delegate>
  </extension>
  
  <!-- Trace-->
  <extension
      point="org.eclipse.ui.trace.traceComponents">
      <component
            id="liberty.tools.trace"
            label="Liberty Developer Tools">
         <bundle
               name="liberty">
         </bundle>
      </component>
  </extension>
</plugin>
